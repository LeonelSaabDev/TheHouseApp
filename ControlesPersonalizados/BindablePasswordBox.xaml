<UserControl x:Class="TheHouseLogin.ControlesPersonalizados.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheHouseLogin.ControlesPersonalizados"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    <PasswordBox x:Name="txtPass"
         FontSize="13"
         FontWeight="Medium"
         FontFamily="Sans Serif Collection"
         Foreground="White"
         CaretBrush="LightGray"
         BorderBrush="DarkGray"
         BorderThickness="0,0,0,1"
         VerticalContentAlignment="Center"
         Padding="25,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/TheHouseLogin;component/Images/key16.png"
                    Stretch="None"
                    AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
