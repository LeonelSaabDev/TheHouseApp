<Window x:Class="TheHouseLogin.View.ProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheHouseLogin.View"
        mc:Ignorable="d"
        Title="Agregar Nuevo Producto" Height="300" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10"
            BorderThickness="2"
            MouseDown="Border_MouseDown">

        <!-- Borde degradado -->
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#9a999e" Offset="0"/>
                <GradientStop Color="#debe30" Offset="0.75"/>
                <GradientStop Color="#3C2F00" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <!-- Fondo degradado -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#0D0D0D" Offset="0"/>
                <GradientStop Color="#E1C033" Offset="0.50"/>
                <GradientStop Color="#3C2F00" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Agregar/Editar Producto"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 15"/>

            <!-- Nombre -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 5">
                <TextBlock Text="Nombre:" Width="80" VerticalAlignment="Center" Foreground="White" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                <TextBox x:Name="txtNombre"
                         Width="250"
                         Background="#1A1A1A"
                         Foreground="White"
                         BorderBrush="#E1C033"
                         BorderThickness="1"
                         Padding="4"/>
            </StackPanel>

            <!-- Precio -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 5">
                <TextBlock Text="Precio:" Width="80" VerticalAlignment="Center" Foreground="White" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                <TextBox x:Name="txtPrecio"
                         Width="250"
                         Background="#1A1A1A"
                         Foreground="White"
                         BorderBrush="#E1C033"
                         BorderThickness="1"
                         Padding="4"/>
            </StackPanel>

            <!-- Stock -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0 5">
                <TextBlock Text="Stock:" Width="80" VerticalAlignment="Center" Foreground="White" FontSize="16" FontFamily="Yu Gothic UI Semibold"/>
                <TextBox x:Name="txtStock"
                         Width="250"
                         Background="#1A1A1A"
                         Foreground="White"
                         BorderBrush="#E1C033"
                         BorderThickness="1"
                         Padding="4"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="4"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">
                <Button Content="Cancelar"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Click="Cancelar_Click"
                        Background="#FA7373"
                        Foreground="Black"
                        FontWeight="Bold"
                        BorderBrush="Transparent"/>

                <Button Content="Guardar"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Click="Guardar_Click"
                        Background="#E1C033"
                        Foreground="Black"
                        FontWeight="Bold"
                        BorderBrush="Transparent"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
